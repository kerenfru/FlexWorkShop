#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('FlexWorkShop:server');
var http = require('http');
var io = require('socket.io');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);


var listener = io.listen(server);

var people = {};

listener.on('connection', function(client) {

  client.on("join", function(name){
    console.log(name + " joined");
    people[client.id] = {};
    people[client.id]["name"] = name;
    people[client.id]["exercises"] = {};
    client.emit("update", "You have connected to the server.");
    listener.sockets.emit("update", name + " has joined the server.");
    listener.sockets.emit("update-people", people);
  });

  client.on("success", function(name, targil){
    if (!people[client.id]["exercises"][targil]) {
      people[client.id]["exercises"][targil] = true;
    }
    listener.sockets.emit("update-people", people);
  });

  client.on("disconnect", function(){
    console.log("disconnect " + client.id);
    listener.sockets.emit("update", people[client.id] + " has left the server.");
    delete people[client.id];
    listener.sockets.emit("update-people", people);
  });
});


/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
